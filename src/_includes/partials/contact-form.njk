<form class="space-y-6" action="https://api.web3forms.com/submit" method="POST">
    <input type="hidden" name="access_key" value="{{ site.web3formsKey }}">
    <input type="hidden" name="subject" value="New Contact Form Submission - {{ site.title }}">
    <input type="hidden" name="from_name" value="{{ site.title }} Website">
    <input type="hidden" name="replyto" value="{{ site.email }}">
    <div>
        <label for="name" class="block mb-2 text-lg">Name</label>
        <input type="text" name="name" id="name" class="w-full p-3 bg-milwaukee-gray border-2 border-gray-600 rounded focus:border-milwaukee-red focus:outline-none text-white" required>
    </div>
    <div>
        <label for="email" class="block mb-2 text-lg">Email</label>
        <input type="email" name="email" id="email" class="w-full p-3 bg-milwaukee-gray border-2 border-gray-600 rounded focus:border-milwaukee-red focus:outline-none text-white" required>
    </div>
    <div>
        <label for="message" class="block mb-2 text-lg">Message</label>
        <textarea name="message" id="message" rows="4" class="w-full p-3 bg-milwaukee-gray border-2 border-gray-600 rounded focus:border-milwaukee-red focus:outline-none text-white" required></textarea>
    </div>
    <button type="submit" class="bg-milwaukee-red text-white px-8 py-4 rounded font-bold hover:bg-red-700 transition-colors w-full md:w-auto">
        SEND MESSAGE
    </button>
</form>
