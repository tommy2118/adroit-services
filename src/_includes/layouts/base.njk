<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% include "partials/analytics.njk" %}

    <title>{% if pageTitle %}{{ pageTitle }} | {% endif %}{{ site.title }}</title>

    <!-- Animate.css for smooth animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

    <!-- SEO Meta Tags -->
    <meta name="description" content="{{ description or site.description }}">
    <meta name="keywords" content="general contractor, home renovation, custom carpentry, kitchen remodeling, bathroom remodeling, Crestwood KY, construction services">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ site.url }}{{ page.url | url }}">
    <meta property="og:title" content="{% if pageTitle %}{{ pageTitle }} | {% endif %}{{ site.title }}">
    <meta property="og:description" content="{{ description or site.description }}">
    <meta property="og:image" content="{{ site.url }}/og-image.jpg">
    <meta property="og:email" content="{{ site.email }}">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ site.url }}{{ page.url | url }}">
    <meta property="twitter:title" content="{% if pageTitle %}{{ pageTitle }} | {% endif %}{{ site.title }}">
    <meta property="twitter:description" content="{{ description or site.description }}">
    <meta property="twitter:image" content="{{ site.url }}/og-image.jpg">

    <!-- Canonical URL -->
    <link rel="canonical" href="{{ site.url }}{{ page.url | url }}">

    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">

    <!-- Schema.org markup -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "HomeAndConstructionBusiness",
      "name": "{{ site.title }}",
      "image": "{{ site.url }}/og-image.jpg",
      "description": "{{ site.description }}",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "",
        "addressLocality": "Crestwood",
        "addressRegion": "KY",
        "postalCode": "40014",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "",
        "longitude": ""
      },
      "url": "{{ site.url }}",
      "telephone": "{{ site.phone }}",
      "priceRange": "$",
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday"
        ],
        "opens": "07:00",
        "closes": "18:00"
      },
      "sameAs": [
        ""
      ],
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": "",
          "longitude": ""
        },
        "geoRadius": "50000"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Construction Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Home Renovations",
              "description": "Complete home transformations with precision and power"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Custom Carpentry",
              "description": "Expert craftsmanship for your unique projects"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Kitchen & Bath Remodeling",
              "description": "Modern designs with industrial-grade durability"
            }
          }
        ]
      }
    }
    </script>

    <link rel="stylesheet" href="/assets/css/main.css">
</head>
<body class="min-h-screen bg-white">
    {% include "partials/nav.njk" %}

    <main>
        {{ content | safe }}
    </main>

    {% include "partials/footer.njk" %}

    <script src="/assets/js/main.js"></script>
</body>
</html>
